{
  // These tasks will run in order when initializing your CodeSandbox project.
  "setupTasks": [
    {
      "name": "Install Dependencies",
      "command": "pnpm install"
    }
  ],

  // These tasks can be run from CodeSandbox. Running one will open a log in the app.
  "tasks": {
    "build": {
      "name": "build",
      "command": "pnpm build",
      "runAtStart": false
    },
    "clean": {
      "name": "clean",
      "command": "pnpm clean",
      "runAtStart": false
    },
    "clean:workspaces": {
      "name": "clean:workspaces",
      "command": "pnpm clean:workspaces",
      "runAtStart": false
    },
    "db:generate": {
      "name": "db:generate",
      "command": "pnpm db:generate",
      "runAtStart": false
    },
    "db:push": {
      "name": "db:push",
      "command": "pnpm db:push",
      "runAtStart": false
    },
    "db:studio": {
      "name": "db:studio",
      "command": "pnpm db:studio",
      "runAtStart": false
    },
    "dev": {
      "name": "dev",
      "command": "pnpm dev",
      "runAtStart": true
    },
    "dev:web": {
      "name": "dev:web",
      "command": "pnpm dev:web",
      "runAtStart": false
    },
    "format": {
      "name": "format",
      "command": "pnpm format",
      "runAtStart": false
    },
    "format:fix": {
      "name": "format:fix",
      "command": "pnpm format:fix",
      "runAtStart": false
    },
    "lint": {
      "name": "lint",
      "command": "pnpm lint",
      "runAtStart": false
    },
    "lint:fix": {
      "name": "lint:fix",
      "command": "pnpm lint:fix",
      "runAtStart": false
    },
    "typecheck": {
      "name": "typecheck",
      "command": "pnpm typecheck",
      "runAtStart": false
    }
  }
}
